<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/fad7ba032c.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
    <div class="container">

     <div class="row">
      <h1 class="col-md-9"><%=  link_to "Bookers", "/", class:"homelink" %></h1>
      <% if user_signed_in? %>

        <nav  class="nav-list col-md-3">
          <ul>
             <li class="nav-list-item">
              <i class="fas fa-home"></i> <%= link_to "Home", user_path(current_user.id),class:"white-link" %>
             </li>
             <li class="nav-list-item">
              <i class="fas fa-users"></i> <%= link_to "Users", users_path,class:"white-link"  %>
             </li>
             <li class="nav-list-item">
              <i class="fas fa-book-open"></i> <%= link_to "Books", books_path,class:"white-link"  %>
             </li>
             <li class="nav-list-item">
             <i class="fas fa-sign-out-alt"></i> <%= link_to "logout", destroy_user_session_path,class:"white-link", method: :delete %>
             </li>
          </ul>
        </nav>

    <%  else %>

         <nav class="nav-list col-md-3">
          <ul>
           <li class="nav-list-item">
             <i class="fas fa-home"></i>   <%= link_to "Home", "/",class:"white-link" %>
           </li>
           <li class="nav-list-item">
             <i class="fas fa-link"></i> <%= link_to "About", home_about_path,class:"white-link"  %>
           </li>
           <li class="nav-list-item">
             <i class="fas fa-user-plus"></i>  <%= link_to "sign up", new_user_registration_path,class:"white-link"  %>
           </li>
           <li class="nav-list-item">
             <i class="fas fa-sign-in-alt"></i> <%= link_to "login", new_user_session_path,class:"white-link" %>
           </li>
         </ul>
         </nav>
      <%  end %>
    </div>
  </div>

      </header>
    <p class="notice"><%= notice %></p>


    <%= yield %>

    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
    
  </body>
</html>
